<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register Here"
        android:id="@+id/textView50"
        android:textSize="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:singleLine="true"
        android:id="@+id/name"
        android:layout_below="@+id/textView50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Enter Email"

        android:id="@+id/email10"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Enter College Name"
        android:id="@+id/college_name10"
        android:layout_below="@+id/email10"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:singleLine="true"
        android:hint="Enter Password"
        android:id="@+id/Password10"
        android:layout_below="@+id/username10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_signup10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup10"
        android:layout_above="@+id/submit_signup10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male10"
            android:text="Male"
            android:textSize="18dp"
            android:layout_below="@+id/editText10"
            android:layout_toLeftOf="@+id/button20"
            android:layout_toStartOf="@+id/button20" />

        <RadioButton
            android:layout_width="wrap_content"
            android:text="Female"
            android:id="@+id/female10"
            android:textSize="18dp"
            android:checked="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText10"
            android:layout_toRightOf="@+id/radioButton10"
            android:layout_toEndOf="@+id/radioButton10" />
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username10"
        android:hint="Enter Username"
        android:layout_below="@+id/college_name10"
        android:singleLine="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>